
{
  "framework": {
    "name": "SOaC Framework",
    "version": "1.0.0",
    "organization": "SOaC Framework Team",
    "environment": "production"
  },
  "correlation": {
    "confidence_threshold": 3,
    "time_windows": {
      "real_time": 15,
      "short_term": 90,
      "long_term": 1440
    },
    "entity_pivots": [
      "UserName",
      "ComputerName",
      "aip",
      "SHA256HashData",
      "TransactionID"
    ]
  },
  "integrations": {
    "falcon": {
      "api_url": "https://api.crowdstrike.com",
      "client_id": "",
      "client_secret": "",
      "enabled": true
    },
    "entraid": {
      "tenant_id": "",
      "client_id": "",
      "client_secret": "",
      "enabled": true
    },
    "paloalto": {
      "api_url": "",
      "api_key": "",
      "enabled": true
    },
    "umbrella": {
      "api_url": "",
      "api_key": "",
      "enabled": false
    },
    "cloudtrail": {
      "region": "us-east-1",
      "access_key_id": "",
      "secret_access_key": "",
      "enabled": true
    },
    "servicenow": {
      "instance_url": "",
      "username": "",
      "password": "",
      "enabled": true
    }
  },
  "soar": {
    "auto_execute_playbooks": false,
    "require_approval_for": [
      "PB-FF1-FRAUD",
      "PB-IN1-INTRUSION"
    ],
    "notification_channels": {
      "email": {
        "enabled": true,
        "smtp_server": "",
        "smtp_port": 587,
        "from_address": "soac@organization.com"
      },
      "teams": {
        "enabled": true,
        "webhook_url": ""
      },
      "slack": {
        "enabled": false,
        "webhook_url": ""
      }
    }
  },
  "logging": {
    "level": "INFO",
    "format": "json",
    "output": "logs/soac_framework.log",
    "rotation": "100 MB",
    "retention": "30 days"
  },
  "alerting": {
    "severity_thresholds": {
      "critical": {
        "notify_immediately": true,
        "escalation_time": 5
      },
      "high": {
        "notify_immediately": true,
        "escalation_time": 15
      },
      "medium": {
        "notify_immediately": false,
        "escalation_time": 60
      }
    }
  }
}
