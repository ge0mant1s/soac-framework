
# Database Configuration
DATABASE_URL=postgresql://soac_user:soac_password@postgres:5432/soac_db

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
FRONTEND_URL=http://localhost:3000

# Environment
ENVIRONMENT=development

# ============= Event Collection Configuration =============
# Mock Mode - Use mock data instead of real device connections
# Set to 'true' for immediate testing without real credentials
MOCK_MODE=true

# Background Event Collection
# Automatically collect events from devices in the background
ENABLE_BACKGROUND_COLLECTION=true

# Event Collection Interval (seconds)
# How often to collect events from devices (default: 300 = 5 minutes)
EVENT_COLLECTION_INTERVAL=300

# ============= Device Integration Credentials =============
# These are optional - devices can be configured via the UI
# Include them here for automated deployments or testing

# Palo Alto NGFW
# PALOALTO_API_URL=https://firewall.example.com
# PALOALTO_API_KEY=your-api-key-here
# PALOALTO_VERIFY_SSL=true

# Microsoft Entra ID (Azure AD)
# ENTRAID_TENANT_ID=your-tenant-id
# ENTRAID_CLIENT_ID=your-client-id
# ENTRAID_CLIENT_SECRET=your-client-secret
# ENTRAID_GRAPH_API_URL=https://graph.microsoft.com/v1.0

# SIEM (Splunk/Elastic)
# SIEM_TYPE=splunk  # or elastic
# SIEM_API_URL=https://splunk.example.com:8089
# SIEM_USERNAME=admin
# SIEM_PASSWORD=your-password
# SIEM_VERIFY_SSL=true
