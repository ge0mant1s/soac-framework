# SOaC Framework - Environment Variables
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://soac_user:your_secure_postgres_password_here@postgres:5432/soac

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0

# ============================================
# Application Security
# ============================================
SECRET_KEY=your_secret_key_here_min_32_chars
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars

# ============================================
# Flask Configuration
# ============================================
FLASK_ENV=production
FLASK_DEBUG=0

# ============================================
# AI Assistant Configuration
# ============================================
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ============================================
# Platform API Keys (Add as needed)
# ============================================

# Splunk
SPLUNK_HOST=https://your-splunk-instance.com
SPLUNK_TOKEN=your-splunk-token-here

# Azure Sentinel
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_WORKSPACE_ID=your-workspace-id

# CrowdStrike
CROWDSTRIKE_CLIENT_ID=your-crowdstrike-client-id
CROWDSTRIKE_CLIENT_SECRET=your-crowdstrike-client-secret

# Elastic
ELASTIC_CLOUD_ID=your-elastic-cloud-id
ELASTIC_API_KEY=your-elastic-api-key

# Palo Alto Networks
PAN_API_KEY=your-pan-api-key
PAN_HOST=https://your-pan-instance.com

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/soac.log

# ============================================
# Email Configuration (for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=soac@example.com

# ============================================
# Webhook Configuration
# ============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# ============================================
# Performance Tuning
# ============================================
WORKERS=4
THREADS=2
TIMEOUT=120

# ============================================
# Feature Flags
# ============================================
ENABLE_AI_ASSISTANT=true
ENABLE_THREAT_INTEL=true
ENABLE_REAL_TIME_STREAMING=true
ENABLE_METRICS=true